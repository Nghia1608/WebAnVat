{{>headerAdmin}}

<div class="mt-4">
    <h2>Danh sách sản phẩm đã xóa</h2>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Mô tả</th>

            <th scope="col" colspan="2">Tình trạng</th>

            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.tenSanPham}}</td>
            <td>{{this.moTa}}</td>
            <td>{{this.tinhTrang}}</td>
            <td>
                <a id="btn-select"href="" class="btn btn-link" data-id="{{this._id}}" data-toggle="modal" data-target="#exampleModalRestore">Khôi phục</a>
                <a id="btn-select"href="" class="btn btn-link" data-id="{{this._id}}" data-toggle="modal" data-target="#exampleModalDelete">Xóa vĩnh viễn</a>

            </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="4"class="text-center">
                <h3>
                Bạn chưa xóa sản phẩm nào !
                </h3>


              </td>
            </tr>
            {{/each}}

        </tbody>

    </table>
    <a href="/admin/storedProducts">Quay về</a>

</div>
<!--Form Xóa va restore-->
    <form id="restore-product-form"name="restore-product-form" method="POST">
<!--Confirm Restore Button -->

<div class="modal fade" id="exampleModalRestore" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận khôi phục</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc muốn khôi phục sản phẩm ?</p>
      </div>
      <div class="modal-footer">
        <a id="count-down">Wait for Available</a>
        <button id="btn-restore" type="button" class="btn btn-danger">Xác nhận</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>
<!--Confirm Delete Button -->

<div class="modal fade" id="exampleModalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xóa vĩnh viễn</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc muốn xóa vĩnh viễn sản phẩm ?</p>
      </div>
      <div class="modal-footer">
        <a id="count-down">Wait for Available</a>
        <button id="btn-delete" type="button" class="btn btn-danger">Xác nhận</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>


<!--Disable Delete Button trong 10s-->
<script>
      var btnselect = document.getElementById('btn-select');
      var btnselect1 = document.getElementById('btn-select1');
      var countdown = document.getElementById('count-down');

       btnselect.onclick =  function() {
            document.getElementById("btn-delete").disabled = true;
            setTimeout(function() {
                document.getElementById("btn-delete").disabled = false;
            }, 10000);
              document.getElementById("btn-restore").disabled = true;
            setTimeout(function() {
                document.getElementById("btn-restore").disabled = false;
            }, 10000);
            document.getElementById("count-down").hidden = false;
            setTimeout(function() {
                document.getElementById("count-down").hidden = true;
            }, 10000);
        }

</script>
<!--Event xóa,restore-->
<script>
    document.addEventListener('DOMContentLoaded',function(){
        var idDelete;
        var idRestore;
        var restoreForm = document.getElementById('restore-product-form');

        var deleteForm = document.getElementById('restore-product-form');
        var btnDelete = document.getElementById('btn-delete');
        var btnRestore = document.getElementById('btn-restore');





        $('#exampleModalRestore').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) 
        idRestore = button.data('id')

        });

        $('#exampleModalDelete').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) 
        idDelete = button.data('id')
        });

        btnRestore.onclick = function(){
            restoreForm.action = '/products/'+idRestore + '/restore?_method=PATCH';
            restoreForm.submit(); 

        }
        btnDelete.onclick = function(){
            deleteForm.action = '/products/'+idDelete + '/delete?_method=DELETE';
            deleteForm.submit();
        }
    })

</script>
