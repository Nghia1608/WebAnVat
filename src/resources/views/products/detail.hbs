    <a href="/products/{{products._id}}/createDetail">Thêm chi tiết sản phẩm {{products.tenSanPham}}</a>
    <table class="table">
        <thead>
            <tr>
            <th scope="col">STT</th>
            <th scope="col">Size</th>
            <th scope="col">Số lượng còn</th>
            <th scope="col">Giá tiền bán ra</th>
            <th scope="col" colspan="2">Tình trạng</th>
            </tr>
        </thead>
        <tbody>
            {{#each productsdetails}}
            <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>
                <h5 class="size"id="size{{this.giaTienBanRa}}" name="size{{this.giaTienBanRa}}" >{{this.size}}</h5>
            </td>
            <td>
                <h5 class="soLuongCon"id="soLuongCon{{this.giaTienBanRa}}" name="size{{this.giaTienBanRa}}" >{{this.soLuongCon}}</h5>
                </td>
            <td>
            <h5 class="giaTienBanRa"id="giaTienBanRa{{this.giaTienBanRa}}" name="giaTienBanRa{{this.giaTienBanRa}}" >{{this.giaTienBanRa}}</h5>
            </td>
			<td>
            <h5 class="tinhTrang"id="tinhTrang{{this.giaTienBanRa}}" name="giaTienBanRa{{this.giaTienBanRa}}" >{{this.tinhTrang}}</h5>
            </td>
            <td>
                <a href="/products/{{this._id}}/editDetail" class="btnUpdate btn-link">Sửa</a>
                <a id="btn-select"href="" class="btnDelete btn-link" data-id="{{this._id}}" data-toggle="modal" data-target="#exampleModal">Xóa</a>

            </td>
            </tr>
            <input type="text" class="form-control" value="{{this.giaTienBanRa}}" id="giaTienBanRaSP{{this.giaTienBanRa}}" name="giaTienBanRa{{this.giaTienBanRa}}" hidden>

            <script>
                //size
                    var sizeHienThi{{this.giaTienBanRa}} = "size"+{{this.giaTienBanRa}}
                    document.getElementById(sizeHienThi{{this.giaTienBanRa}}).innerHTML = ({{this.size}}).toLocaleString() + "  g";     
                //soluong
                    var soLuongConHienThi{{this.giaTienBanRa}} = "soLuongCon"+{{this.giaTienBanRa}}
                    document.getElementById(soLuongConHienThi{{this.giaTienBanRa}}).innerHTML = ({{this.soLuongCon}}).toLocaleString();   
                //giatien
            var giaTienBanRaHienThi{{this.giaTienBanRa}} = "giaTienBanRa"+{{this.giaTienBanRa}}
            document.getElementById(giaTienBanRaHienThi{{this.giaTienBanRa}}).innerHTML = ({{this.giaTienBanRa}}).toLocaleString() + "  VND";     
                </script>

            {{/each}}

        </tbody>

    </table>
